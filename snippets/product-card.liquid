
    {% assign columns_markup = "col-lg-3" %}
{% case columns %}
    {% when '2' %}
        {% assign columns_markup = 'col-lg-6' %}
    {% when '3' %}
        {% assign columns_markup = 'col-lg-4' %}
    {% when '4' %}
        {% assign columns_markup = 'col-lg-3' %}
    {% when 'carousel' %}
        {% assign columns_markup = 'single-carousel-item' %}
        
{% endcase %}


<div class="{{columns_markup}}">
    <div class="single-product-item">
    <a href="{{product.url | within:collection}}">
        <div class="single-product-bg" style="background-image: url({{product.featured_image.src | img_url: 'large'}})"></div>
    </a>
    <a href="{{product.url | within:collection}}"><h3>{{product.title}}</h3></a>
    <div class="single-product-price">
        <p>{{product.price | money}}</p>
        {% unless product.available %} <br><strong>Sold Out</strong>{% endunless %}
    </div>
    </div>
</div>